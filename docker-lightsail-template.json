{
    "containers": {
        "app": {
            "image": "",
            "environment": {
                "APP_ENV": "release",
                "NODE_ENV": "production",
                "AWS_ACCESS_KEY_ID": "$AWS_ACCESS",
                "AWS_SECRET_ACCESS_KEY": "$AWS_SECRET",
                "AWS_REGION": "eu-central-1"
            },
            "ports": {
                "3000": "HTTP"
            }
        }
    },
    "publicEndpoint": {
        "containerName": "app",
        "containerPort": 3000,
        "healthCheck": {
            "healthyThreshold": 2,
            "unhealthyThreshold": 2,
            "timeoutSeconds": 60,
            "intervalSeconds": 120,
            "path": "/api/health",
            "successCodes": "200"
        }
    }
}